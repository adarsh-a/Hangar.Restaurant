@model Hangar.Restaurant.Models.Reservation
@{  
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<!-- Start Reservation -->
<div class="reservation-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <h2>Reservation</h2>
                    <p>Lorem Ipsum is simply dummy text of the printing and typesetting</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="contact-block">
                    @using (Html.BeginForm("Index","Reservation", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h3>Book a table</h3>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.date, new { @class = "datepicker picker__input form-control", @id = "input_date", @placeholder = "Date" })
                                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.date, "")</div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.time, new { @class = "time form-control picker__input", @id = "input_time", @placeholder = "Time" })
                                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.time, "")</div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                       @Html.DropDownListFor(m => m.numberOfPerson,
                            new SelectList(ViewBag.selectList, "Value", "Text"),
                            "Select Person*",
                            new { @class = "custom-select d-block form-control", @id = "person" })
                                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.numberOfPerson, "")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h3>Contact Details</h3>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Your Name" })
                                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.name, "")</div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Your Email" })
                                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.email, "")</div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.phoneNumber, new { @class = "form-control", @placeholder = "Your Number", @id = "phone" })
                                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.phoneNumber, "")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="submit-button text-center">
                                    <input class="btn btn-common" id="submitReservation" type="submit" value="Book Table"/>
                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            @if (ViewBag.allBooked != null && ViewBag.allBooked == true)
                            {
                            <div class="col-md-12">
                                <div class="text-center">
                                    <div class="h3 text-center">Cannot book on that specific date and time</div>
                                </div>
                            </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Reservation -->
