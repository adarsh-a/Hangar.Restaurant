@model IEnumerable<Hangar.Restaurant.Models.Slider>
<div id="slides" class="cover-slides">
    <ul class="slides-container">
        @foreach (var slide in Model)
        {
            <li class="text-left">
                <img src="@slide.Image" alt="">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="m-b-20"><strong>Welcome To <br> @slide.Title</strong></h1>
                            <p class="m-b-40">
                                @slide.Description  <br>
                                @slide.Description1
                            </p>
                            <p><a class="btn btn-lg btn-circle btn-outline-new-white" href="@slide.Links">Reservation</a></p>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
    <div class="slides-navigation">
        <a href="#" class="next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
        <a href="#" class="prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
    </div>
</div>
